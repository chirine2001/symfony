{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1>
     {{ ville }}
    </h1>
    <hr/>
    <h2> Nombre d'habitants : {{ habitant}}</h2>
    <hr/>
    <h2>
        Type : 
        {% if habitant < 1000 %}
        Village
        {% elseif habitant >= 1000 and habitant < 10000 %}
        Petite ville
        {% elseif habitant >= 10000 %}
        Grande ville
        {% endif %}
{% endblock %}
